<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:textColor="#EA1722"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/qinggoutitle"
            android:text="抢购即将开始"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qinggousectitle"
                android:text="距本场开始:"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
            <LinearLayout
                android:id="@+id/timetextneedshow"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/text_boder_r_w_miaosha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:textColor="#EA1722"
                    android:id="@+id/day"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:text="天"/>
                <TextView
                    android:background="@drawable/text_boder_r_w_miaosha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EA1722"
                    android:layout_margin="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:id="@+id/hour"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:text="时"/>
                <TextView
                    android:background="@drawable/text_boder_r_w_miaosha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EA1722"
                    android:layout_margin="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:id="@+id/min"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:text="分"/>
                <TextView
                    android:background="@drawable/text_boder_r_w_miaosha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EA1722"
                    android:layout_margin="1dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:id="@+id/sec"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:text="秒"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/text_boder_r_w2_miaosha"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/needshowgg"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zanwuxinxi"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="暂无商品信息"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>