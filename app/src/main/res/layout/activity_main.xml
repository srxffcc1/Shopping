<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.nado.parking.ui.main.MainActivity"

    >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        />
    <View
        style="@style/HorizontalLine"></View>
    <android.support.design.widget.TabLayout
        android:background="@color/colorWhite"
        android:id="@+id/tl_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="@dimen/dp_0"
        app:tabSelectedTextColor="@color/colorRed"
        app:tabTextColor="@color/colorDarkTest"
        />

</LinearLayout>
