<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nado.parking.ui.main.MainActivity">

    <include layout="@layout/layout_top_back_bar" />
    <RelativeLayout
        android:background="#50BFE7"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/jiance_m" />

        <TextView
            android:id="@+id/startcheck"
            android:background="@drawable/text_boder_r"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_height="200dp"
            android:text="开始检测" />

    </RelativeLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cheliangjiankang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆健康:~"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>

