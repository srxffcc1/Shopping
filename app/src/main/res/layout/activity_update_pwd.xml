<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.nado.parking.ui.user.account.UpdatePwdActivity">

    <include layout="@layout/layout_top_back_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/bg_live"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        >

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/sp_14"/>


        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/et_activity_update_pwd_input_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/sp_14"
            />

    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/colorGray5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/et_activity_update_pwd_input_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/input_code"
            android:textColorHint="@color/colorFontGray5"
            android:textSize="@dimen/sp_14"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/tv_activity_update_pwd_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/get_verify_code"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/bg_live"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/et_activity_update_pwd_input_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/colorFontGray5"
            android:textSize="@dimen/sp_14"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iv_activity_update_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/eye_close_gray"/>

    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        />

    <View
        style="@style/HorizontalLine"
        android:layout_marginTop="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_activity_update_pwd_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:background="@drawable/log_btn_red"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14"/>

</LinearLayout>
