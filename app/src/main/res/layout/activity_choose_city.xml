<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorTopBar"
              android:orientation="vertical">

    <include layout="@layout/layout_top_back_bar" android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
  <LinearLayout
      android:visibility="gone"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">
      <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
          android:id="@+id/trl_activity_choose_city_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <android.support.v7.widget.RecyclerView
              android:id="@+id/rv_activity_choose_city_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
          </android.support.v7.widget.RecyclerView>

      </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

  </LinearLayout>

        <com.nado.shopping.widget.LetterListView
            android:visibility="gone"
            android:id="@+id/llv_activity_choose_city_list"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
