<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="com.nado.parking.ui.purchasing.CompetitiveFragment">

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/trl_fragment_competitive_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgGray"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fragment_competitive_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <include
            android:id="@+id/layout_fragment_competitive_record_empty"
            layout="@layout/layout_item_have_no_record"
            android:visibility="gone"
            />
        <include
            android:id="@+id/layout_fragment_competitive_loading"
            layout="@layout/layout_item_loading"
            android:visibility="gone"
            />
        <include
            android:id="@+id/layout_fragment_competitive_loading_fail"
            layout="@layout/layout_item_loading_fail"
            android:visibility="gone"
            />
        <include
            android:id="@+id/layout_fragment_competitive_have_no_net"
            layout="@layout/layout_item_have_no_net"
            android:visibility="gone"
            />

    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

</LinearLayout>
