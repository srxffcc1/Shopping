<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.nado.parking.ui.user.account.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/sp_17"/>

        <ImageView
            android:id="@+id/iv_activity_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@drawable/log_close_black"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_login_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:animationCache="false"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/log_icon_tel_white"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_activity_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorGrayHintText"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        />

    <LinearLayout
        android:id="@+id/ll_login_pass_word"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:animationCache="false"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/log_icon_lock_white"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_activity_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorGrayHintText"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_activity_login_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/eye_close_white"/>
    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50"
        android:paddingTop="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_activity_login_forget_password"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:text="忘记密码"
            android:textColor="@color/colorGrayFont"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tv_activity_login_quick_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawablePadding="13dp"
            android:text="立即注册"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_login_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/log_btn_red"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/log_background"/>


    </LinearLayout>


</LinearLayout>
