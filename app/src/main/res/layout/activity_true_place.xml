<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/layout_top_back_bar"/>

    <LinearLayout
        android:id="@+id/ll_activity_true_place"
        style="@style/ItemStyle"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际居住地"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_activity_true_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_choose"
            android:textColor="@color/live_text"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/right"
            />
    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        />

    <LinearLayout
        style="@style/ItemStyle"
        android:background="@drawable/selector_item"
        android:gravity="center_vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorBlack"
        android:text="@string/detail_place"
        />
    </LinearLayout>

    <EditText
        android:id="@+id/et_activity_true_place_detail"
        android:gravity="top"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_150"
        android:background="@drawable/shape_solid_stroke_gray_corner_5"
        android:padding="@dimen/dp_15"
        android:hint="@string/please_input_detail_place"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/tabGrayText"
        />
</LinearLayout>
