<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nado.shopping.ui.user.account.UpdatePwdActivity">
    <LinearLayout
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_layout_top_back_bar_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_dark_gray"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_layout_top_back_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="忘记密码"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/sp_17"
                android:drawablePadding="@dimen/dp_10"
                />
            <TextView
                android:paddingRight="@dimen/dp_10"
                android:id="@+id/tv_layout_back_top_bar_operate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_0"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            >

        <EditText
            android:inputType="phone"
            android:id="@+id/et_activity_update_pwd_input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_phone"
            android:textColorHint="@color/colorGray7"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            />
        </LinearLayout>
    <TextView

        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:id="@+id/tv_activity_update_pwd_get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_verify_code"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/colorgray"
        android:background="@drawable/selector_gray_corner_0"

        />
    </LinearLayout>
    <LinearLayout
        style="@style/ItemStyle"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >


        <EditText
            android:id="@+id/et_activity_update_pwd_input_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/input_code"
            android:textColorHint="@color/colorGray7"
            android:textSize="@dimen/sp_14"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/ItemStyle"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_11"
        android:gravity="center_vertical"
        >


        <EditText
            android:id="@+id/et_activity_update_pwd_input_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/colorGray7"
            android:textSize="@dimen/sp_14"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_activity_forget_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/eye_close_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_11"
        style="@style/ItemStyle"
        android:gravity="center_vertical"
        >


        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_activity_update_pwd_input_pwd_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请确认新密码"
            android:textColorHint="@color/colorGray7"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_activity_forget_show_confirm_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/eye_close_gray"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_update_pwd_save"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:text="重置密码"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/colorgray"
        android:background="@drawable/selector_gray_corner_4"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
