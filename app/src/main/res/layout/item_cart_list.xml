<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="120dp"
    android:layout_margin="9dp">

    <CheckBox
        android:padding="3dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/check"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_cart" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="120dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/image"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:src="@drawable/cart_shop_test" />

        <TextView
            android:id="@+id/title"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:text="科沃斯 Ecovacs 扫地机器人地宝
DE53 扫拖一体全自动智能规划..."
            android:textColor="#ff313030"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fuwu"
            android:layout_below="@+id/title"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色，选服务"
            android:textColor="#ff353434"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/money"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/fuwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="¥1399.00"
            android:textColor="#fff0250f"
            android:textSize="15sp" />

        <LinearLayout

            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sub"
                android:padding="10dp"
                android:src="@drawable/cart_sub"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/count"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ff2e2d2d"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/add"
                android:padding="10dp"
                android:src="@drawable/cart_add"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>