<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.nado.parking.ui.main.PayActivity">

    <include layout="@layout/layout_top_back_bar_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qianbao" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/record_blue_line"
            android:drawablePadding="@dimen/dp_5"
            android:text="基本信息"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单总额 ："
                android:textColor="@color/tabGrayText"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_activity_pay_price_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="合计 ："
                android:textColor="@color/tabGrayText"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_activity_pay_price_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/record_blue_line"
            android:drawablePadding="@dimen/dp_5"
            android:text="支付方式"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_activity_pay_ali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_alipay"
                android:drawablePadding="@dimen/dp_10"
                android:text="支付宝支付"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_activity_pay_complete_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_blue_new" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_pay_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_weixin"
                android:drawablePadding="@dimen/dp_10"
                android:text="微信支付"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_activity_pay_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_gray" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_pay_complete_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/btn_blue_circle_square"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="确认支付0元"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
