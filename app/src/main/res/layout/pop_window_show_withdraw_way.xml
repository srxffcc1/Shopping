<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorTransport"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_popup_window_bank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:padding="@dimen/dp_15"
            android:textColor="@color/colorBlack"
            android:gravity="right"
            android:background="@drawable/shape_solid_stroke_yellow_gray_corner_0"
            />

        <TextView
            android:layout_marginTop="-0.75dp"
            android:id="@+id/tv_popup_window_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/dp_15"
            android:gravity="right"
            android:background="@drawable/shape_solid_stroke_yellow_gray_corner_0"
            />

    </LinearLayout>

</LinearLayout>