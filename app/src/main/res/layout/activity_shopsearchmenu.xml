<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGray"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_23">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/seach_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_boder_search"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_pass"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_seach" />
            <EditText
                android:id="@+id/search_tag"
                android:editable="false"
                android:layout_width="0dp"
                android:scrollbars="horizontal"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜一搜" />


        </LinearLayout>
        <TextView
            android:visibility="invisible"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ff666666"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="搜索"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl3_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
