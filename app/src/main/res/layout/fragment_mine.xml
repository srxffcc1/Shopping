<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_23">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="个人中心"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="17sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#E9391C"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_circle" />

                <TextView
                    android:id="@+id/xingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/head"
                    android:text="未登录点击头像可登录"
                    android:textColor="#fffefefe"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/zhuce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xingming"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/head"
                    android:text="未登录"
                    android:textColor="#fffefefe"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/zhuce2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zhuce"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/head"
                    android:text="未登录"
                    android:textColor="#fffefefe"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/passtongzhi"
                    android:layout_marginTop="10dp"
                    android:layout_alignTop="@+id/xingming"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/pass_tongzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:background="#EC5037"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/mylessmoney"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mylessmoneyvalue"
                        android:text="加入即享"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="店主权益"
                        android:id="@+id/dianzhu2"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_width="1dp"
                    android:background="#fff"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:id="@+id/myquan"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myquanvalue"
                        android:text="0"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="我的优惠券"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/all_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:id="@+id/myallorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/quanbudingdan"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="我的订单"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/sp_14"/>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/next_blue"/>
                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorBgGray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="9dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/daifukuan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/daifukuan"
                        android:text="待付款"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/daifahuo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/daifahuo"
                        android:text="待发货"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/daishouhuo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/daishouhuo"
                        android:text="待收货"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/yiwancheng"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/daipingjia"
                        android:text="待评价"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/mycollet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shoucangguanli"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="我的收藏"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myaddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/dizhiguanli"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="地址管理"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/mymoney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/wodexianjin"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="收入明细"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myunder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/dianzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/zhongxinquanyi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="店主权益"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myup"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tuiguangren"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="客户管理"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mykefu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/zhongxinkefu"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="联系客服"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myzxing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/erweima"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="推广二维码"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mysetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shezhi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_blue"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>








</LinearLayout>
