<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nado.parking.ui.main.MainActivity">

    <include layout="@layout/layout_top_back_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/obdnumber"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入您要绑定的设备号"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/device_zxing"
            android:id="@+id/zxingpass"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_activity_login_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/log_btn_red"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>

