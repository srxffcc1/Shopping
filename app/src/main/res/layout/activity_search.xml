<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_72"
        android:paddingTop="@dimen/dp_30"
        >
        <LinearLayout
            android:id="@+id/ll_layout_top_back_bar_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                />
        </LinearLayout>
        <EditText
            android:layout_gravity="center"
            android:id="@+id/et_activity_search_search"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:paddingBottom="@dimen/dp_7"
            android:paddingTop="@dimen/dp_7"
            android:paddingLeft="@dimen/dp_15"
            android:hint="@string/please_input_search"
            android:textColorHint="@color/edit_hint"
            android:textSize="@dimen/sp_13"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:drawableRight="@drawable/clear_search"
            android:paddingRight="@dimen/dp_5"
            />
        <ImageView
            android:id="@+id/iv_activity_search_search"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/search"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_11"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_11"
            android:text="@string/search_history"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@drawable/search_history"
            android:drawablePadding="@dimen/dp_10"
            />
        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/rubbish"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            />

    </LinearLayout>


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tfl_item_jewelry_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            />
</LinearLayout>