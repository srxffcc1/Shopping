<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorWhite"

    tools:context="com.jiudi.shopping.ui.user.account.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textColor="@color/colorTitle"
            android:textSize="@dimen/sp_17"
            android:layout_centerInParent="true"
            android:text="注册"
            android:paddingTop="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_30"
            android:id="@+id/iv_activity_register_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/back_dark_gray"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animationCache="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/log_icon_tel_white"/>

            </LinearLayout>
            <EditText
                android:id="@+id/et_activity_register_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:paddingBottom="11dp"
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:textColor="@color/colorTitle"
                android:textColorHint="@color/colorGrayHintText"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="206dp"
                tools:layout_editor_absoluteY="8dp"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        style="@style/HorizontalLine"
        ></View>
    <LinearLayout
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/log_icon_code_white"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_activity_register_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorGrayHintText"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_activity_register_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        style="@style/HorizontalLine"
        ></View>
    <LinearLayout
        android:paddingTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/log_icon_lock_white"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_activity_register_pwd"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            android:paddingBottom="11dp"
            android:paddingLeft="15dp"
            android:paddingTop="11dp"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorGrayHintText"
            android:inputType="textPassword"
            android:textSize="14sp"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_activity_register_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/eye_close_white"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        style="@style/HorizontalLine"
        ></View>

    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/tv_activity_login_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/log_btn_red"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_login_phone"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        />

    <ImageView
        android:src="@drawable/log_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</LinearLayout>
