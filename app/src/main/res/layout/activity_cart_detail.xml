<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_23">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/cart_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <android.support.design.widget.TabLayout
                    android:id="@+id/main_tab"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    app:tabGravity="center"
                    app:tabMode="fixed"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </android.support.design.widget.TabLayout>
            </LinearLayout>
            <ImageView
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/cart_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/text_boder_black"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:drawableTop="@drawable/cart_kefu"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textColor="#ff6a6a6a"
            android:textSize="11sp"
            />
        <TextView
            android:drawableTop="@drawable/cart_star"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:gravity="center"
            android:textColor="#ff6a6a6a"
            android:textSize="11sp"
            />
        <TextView
            android:drawableTop="@drawable/cart_cart"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:gravity="center"
            android:textColor="#ff6a6a6a"
            android:textSize="11sp"
            />
        <TextView
            android:background="@drawable/text_back_jiarugouwuche"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
        <TextView
            android:background="@drawable/text_back_lijigoumai"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>
