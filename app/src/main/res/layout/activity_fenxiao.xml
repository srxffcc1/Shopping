<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_23">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分销中心"
        android:textColor="#ffffffff"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/fenxiao_head_icon" />
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/head"
            android:layout_toRightOf="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="艾克"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/level"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/head"
            android:text="等级：青铜"
            android:textColor="#ffffffff"
            android:textSize="14sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"/>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/moneyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的现金"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/money"
            android:layout_below="@+id/moneyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.80元"
            android:textColor="#ffffffff"
            android:textSize="19sp"
            />
        <TextView
            android:layout_alignBottom="@id/money"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_boder_quan_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="提现"
            android:textColor="#ffffffff"
            android:textSize="19sp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weidaozhangyongjin"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/weidaozhang1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未到账佣金"
                android:textColor="#ff6c6c6c"
                android:textSize="13sp"
                />

            <TextView
                android:layout_below="@+id/weidaozhangyongjin"
                android:id="@+id/leijihuode"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/huodeyongjin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计获得佣金"
                android:textColor="#ff6c6c6c"
                android:textSize="13sp"
                />
            <TextView
                android:layout_below="@+id/leijihuode"
                android:id="@+id/leijiyi"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/yitiyongjin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计已提佣金"
                android:textColor="#ff6c6c6c"
                android:textSize="13sp"
                />
            <TextView
                android:layout_below="@+id/leijiyi"
                android:id="@+id/yongjinmingxi"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/yongjinmingxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金明细"
                android:textColor="#ff6c6c6c"
                android:textSize="13sp"
                />
            <TextView
                android:layout_below="@+id/yongjinmingxi"
                android:id="@+id/zhishu"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/zhishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直属"
                android:textColor="#ff6c6c6c"
                android:textSize="13sp"
                />
            <TextView
                android:layout_below="@+id/zhishu"
                android:id="@+id/tuandui"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/tuandui2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队"
                android:textColor="#ff6c6c6c"
                android:textSize="13sp"
                />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
