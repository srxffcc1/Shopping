<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_marginBottom="@dimen/dp_15"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_item_exciting_action_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:scaleType="centerCrop"
        />

        <TextView
            android:id="@+id/tv_item_exciting_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray1"
            android:textSize="@dimen/sp_11"
            android:text="活动中"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_150"
            android:background="@drawable/shape_solid_yellow_corner_3"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"

            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_item_exciting_action_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            android:text="充值送奖金 | "
            />

        <TextView
            android:id="@+id/tv_item_exciting_action_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动巴拉巴拉"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            />


    </LinearLayout>

</LinearLayout>
