<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal"

        >
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/colorLine"
            />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_item_recommend_rank_number"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/sp_12"

                />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/colorLine"
                />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center"
                >

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_item_recommend_rank_team_name"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/colorBlack"
                    android:text="阿尔青年"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_item_recommend_rank_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/recommend_up"
                    />
            </LinearLayout>




            <TextView
                android:gravity="center"
                android:id="@+id/tv_item_recommend_rank_match"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorBlack"
                android:text="23"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_item_recommend_rank_win"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorBlack"
                android:text="23"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_item_recommend_rank_equal"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorBlack"
                android:text="23"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_item_recommend_rank_lose"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorBlack"
                android:text="23"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_item_recommend_rank_integral"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorBlack"
                android:text="23"
                />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/colorLine"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorLine"
        />

</LinearLayout>
