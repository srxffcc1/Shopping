<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorGray5"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dp_2"
              android:paddingLeft="@dimen/dp_5"
              android:paddingRight="@dimen/dp_5"
              android:paddingTop="@dimen/dp_2">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item_purchased_list_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/tv_item_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/daohang_big"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_purchased_list_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苏州市万达停车场"
                    android:textColor="@color/colorGrayTitleExpert"
                    android:textSize="@dimen/dp_20"/>

                <TextView
                    android:id="@+id/tv_item_purchased_list_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="江苏省吴中区石湖中路188号"
                    android:textColor="@color/colorFontDark"
                    android:textSize="@dimen/dp_17"/>

                <TextView
                    android:id="@+id/tv_item_purchased_list_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.6KM"
                    android:textColor="@color/colorFontDark"
                    android:textSize="@dimen/dp_17"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/v_item_purchased_list_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/right"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>