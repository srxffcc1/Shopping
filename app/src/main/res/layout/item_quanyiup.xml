<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ececec"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EB4841"
            android:padding="15dp">


            <ImageView
                android:id="@+id/head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/setting"
                android:layout_centerVertical="true"
                android:src="@drawable/default_circle" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/head"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/head"
                android:drawablePadding="8dp"
                android:maxWidth="600px"
                android:singleLine="true"
                android:text="用户昵343434343434343434343434称"
                android:textColor="#ffffffff"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/head"
                android:background="@drawable/level_bg"
                android:gravity="center"
                android:text="钻石店主"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/level"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/level"
                android:text="邀请码："
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EB4841">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/quanyi_pbg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zuanshititle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="17dp"
                    android:text="钻石店主尊享6大权益"
                    android:textColor="#ff964421"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/zuanshishouyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="开店以来已为你赚取￥元"
                    android:textColor="#ff964421"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quanyi_wbg"
                    android:clipChildren="false"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/quanyi_0"
                        android:gravity="center"
                        android:text="超值红包\n千元金券"
                        android:textColor="#ff676767"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/quanyi_1"
                        android:gravity="center"
                        android:text="邀请粉丝\n赢取奖励"
                        android:textColor="#ff676767"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/quanyi_2"
                        android:gravity="center"
                        android:text="粉丝消费\n你得分红"
                        android:textColor="#ff676767"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/quanyi_3"
                        android:gravity="center"
                        android:text="我有好货\n极速上架"
                        android:textColor="#ff676767"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/quanyi_4"
                        android:gravity="center"
                        android:text="购物享返\n还送礼品"
                        android:textColor="#ff676767"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/quanyi_5"
                        android:gravity="center"
                        android:text="热门活动\n特殊权益"
                        android:textColor="#ff676767"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/needshow_dianzhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的现金余额"
                    android:textColor="#ff363636"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#ffe31436"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tixian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_boder_r_quanyi"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="提现"
                    android:textColor="#fff2f2f2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/shouyimingxi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="16dp"
                        android:background="#E31436" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="收益明细"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/sp_14" />

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详情 >>"
                        android:textColor="#ffe31436"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_boder_p_quanyi"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/quanyi_shouyi0"
                            android:text="累计收益"
                            android:textColor="#ff363636"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/leijishouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffe31436"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tleijishouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff9f9f9f"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_boder_p_quanyi"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/quanyi_shouyi2"
                            android:text="已提现收益"
                            android:textColor="#ff363636"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/yitixianshouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffe31436"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tyitixianshouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff9f9f9f"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_boder_p_quanyi"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/quanyi_shouyi0"
                            android:text="未到账收益"
                            android:textColor="#ff363636"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/weidaozhangshouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffe31436"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tweidaozhangshouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff9f9f9f"
                            android:textSize="10sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/kehuguanli"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="16dp"
                        android:background="#E31436" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="客户管理"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/sp_14" />

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详情 >>"
                        android:textColor="#ffe31436"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="88"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/quanyi_kehu2"
                            android:text="我的加盟商"
                            android:textColor="#ff363636"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/jiamengshangshuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff9f9f9f"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#FFB9C5" />

                    <LinearLayout

                        android:id="@+id/stepl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="88"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/quanyi_kehu1"
                            android:text="我的粉丝"
                            android:textColor="#ff363636"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/fensishuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff9f9f9f"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#FFB9C5" />

                    <LinearLayout
                        android:id="@+id/quanl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="88"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/quanyi_kehu0"
                            android:text="我的邀请人"
                            android:textColor="#ff363636"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/yaoqingren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无"
                            android:textColor="#ff9f9f9f"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/kefu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="16dp"
                        android:background="#E31436" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="我有好货"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/sp_14" />

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务联系 >>"
                        android:textColor="#ffe31436"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="10dp"
                    android:text="在线客服一对一专人沟通"
                    android:textColor="#ff9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/needshow_feiudianzhu"
            android:layout_width="match_parent"
            android:background="#FFF"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购买钻石商品"
                android:textColor="#ff363636"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="购买以下任意商品即可成为钻石店主"
                android:textColor="#ff363636"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
