<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.nado.parking.ui.main.InformationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:background="@color/colorAccent"
                  android:paddingTop="@dimen/dp_25"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_72">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="跟单"
                android:id="@+id/tv_layout_top_back_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:paddingRight="@dimen/dp_10"
                android:id="@+id/tv_layout_back_top_bar_operate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_0"
                />
            <View
                style="@style/HorizontalLine"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:background="@color/colorWhite"
        android:id="@+id/mi_fragment_documentary"
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp_40"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@color/colorGray5"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_documentary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
