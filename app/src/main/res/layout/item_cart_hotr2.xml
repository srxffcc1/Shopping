<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/hlc"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="left"
    android:orientation="vertical">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/text_boder_r_gray2_r"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="5dp"
            android:id="@+id/picturel"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/picture"
                android:layout_width="200px"
                android:layout_height="200px"
                android:scaleType="fitCenter"
                android:src="@drawable/tmp_gods" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/titlel"
            android:layout_below="@+id/picturel"
            android:background="@drawable/text_boder_r_pink_r"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:lines="2"
                android:maxLines="2"
                android:text=""
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/show_price"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/colorRed" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>