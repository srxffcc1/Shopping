<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:background="@color/colorGray5"
              android:layout_width="match_parent"
              android:paddingTop="@dimen/dp_2"
              android:paddingBottom="@dimen/dp_2"
              android:paddingLeft="@dimen/dp_10"
              android:paddingRight="@dimen/dp_10"
              android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/colorWhite"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_30"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_follow_order_pname"
                android:textSize="@dimen/sp_14"
                android:text="竞彩"
                android:textColor="@color/colorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_follow_order_cname"
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:text="足球胜平负"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout

            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_follow_order_name"
                android:textSize="@dimen/sp_14"
                android:text="昵称昵称"
                android:textColor="@color/colorOrangeLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_follow_order_total_price"
                android:paddingTop="@dimen/dp_16"
                android:textSize="@dimen/sp_14"
                android:text="1100"
                android:textColor="@color/colorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:text="自购金额（元）"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout

            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/colorYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="@dimen/dp_16"
                android:textSize="@dimen/sp_14"
                android:text="2"
                android:textColor="@color/colorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:text="单倍金额（元）"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout

            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/colorYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_follow_order_total_copy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_16"
                android:text="4"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:text="跟单人数"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>